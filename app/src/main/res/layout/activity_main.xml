<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên của bạn:" />

    <EditText
        android:id="@+id/edtTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên bạn vào đây"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày sinh:"/>

    <EditText
        android:id="@+id/edtNgaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ngày sinh vào đây"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới tính:" />

    <RadioGroup
        android:id="@+id/rdgGioiTinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nam"
            />
        <RadioButton
            android:id="@+id/rbNu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nữ"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở thích của bạn:"/>

    <RadioGroup
        android:id="@+id/rdgSoThich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/cbPhim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem phim"
            />
        <CheckBox
            android:id="@+id/cbNhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nghe nhạc"/>
        <CheckBox
            android:id="@+id/cbCafe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đi cafe với bạn bè"/>
        <CheckBox
            android:id="@+id/cbHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ở nhà một mình"/>
        <CheckBox
            android:id="@+id/cbNauAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vào bếp nấu ăn"/>
    </RadioGroup>


</LinearLayout>